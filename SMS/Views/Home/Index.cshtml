@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Student Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* ✅ Background Video */
        #bg-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        body {
            margin: 0;
            padding: 0;
            color: white;
            font-family: 'Segoe UI', sans-serif;
            overflow-x: hidden;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.6);
        }

        .navbar-brand {
            font-size: 28px;
            font-weight: bold;
            color: #ff4c4c;
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
            position: relative;
        }

        /* ✅ Info Box Animation */
        .info-box {
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%) translateY(10px);
            background-color: rgba(255, 255, 255, 0.9);
            color: #000;
            padding: 12px 18px;
            border-radius: 8px;
            min-width: 260px;
            font-size: 14px;
            display: none;
            z-index: 10;
            box-shadow: 0 0 10px rgba(0,0,0,0.4);
        }

        .nav-item:hover .info-box {
            display: block;
            animation: fadeInUpBox 0.3s ease-out forwards;
        }

        @@keyframes fadeInUpBox {
            from

        {
            opacity: 0;
            transform: translateX(-50%) translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateX(-50%) translateY(10px);
        }

        }

        .main-heading {
            position: absolute;
            top: 45%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            font-size: 3rem;
            font-weight: bold;
            animation: fadeInUp 2s ease-out;
            background-color: rgba(0, 0, 0, 0);
            padding: 20px 40px;
            border-radius: 10px;
        }

        @@keyframes fadeInUp {
            0%

        {
            opacity: 0;
            transform: translate(-50%, 20%);
        }

        100% {
            opacity: 1;
            transform: translate(-50%, -50%);
        }

        }

        .btn-get-started {
            margin-top: 20px;
            font-size: 20px;
            padding: 10px 30px;
            background-color: #ff4c4c;
            border: none;
            transition: all 0.3s ease;
            color: white;
        }

            .btn-get-started:hover {
                background-color: #ff1a1a;
                transform: scale(1.1);
                box-shadow: 0 0 15px #ff1a1a;
            }

        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            color: white;
            text-align: center;
            padding: 10px 0;
        }

        @@media (max-width: 768px) {
            .main-heading

        {
            font-size: 1.8rem;
            padding: 10px 20px;
        }

        .btn-get-started {
            font-size: 16px;
            padding: 8px 20px;
        }

        .info-box {
            font-size: 12px;
            min-width: 200px;
        }

        }
    </style>
</head>
<body>

    <!-- ✅ Background Video -->
    <video autoplay muted loop id="bg-video">
        <source src="/Videos/bg.mp4" type="video/mp4" />
    </video>

    <!-- ✅ Header -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-5">
            <a class="navbar-brand" href="#">SMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- About -->
                    <li class="nav-item position-relative">
                        <a class="nav-link" href="#">About</a>
                        <div class="info-box">
                            Student Management System developed by HBH_Experts.<br />
                            Team: Hasnain Bhutta (.NET Dev), Sheikh Hammad (Designer), Basharat Iqbal (Frontend Developer)
                        </div>
                    </li>

                    <!-- Privacy -->
                    <li class="nav-item position-relative">
                        <a class="nav-link" href="#">Privacy</a>
                        <div class="info-box">
                            We value your privacy. All student records are secure. No data is shared without permission.
                        </div>
                    </li>

                    <!-- Contact -->
                    <li class="nav-item position-relative">
                        <a class="nav-link" href="#">Contact</a>
                        <div class="info-box">
                            📞 +92 324 0064420<br />
                            ✉️ hasnainbhutta262@gmail.com
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Main Centered Title -->
    <div class="main-heading">
        Student Management System<br />
        <a href="/Account/Login" class="btn btn-get-started mt-4">Get Started →</a>
    </div>

    <!-- ✅ Footer -->
    <div class="footer">
        © 2025 All rights reserved | Designed by HBH_Experts
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
