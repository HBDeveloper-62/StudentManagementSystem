@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "View Timetable";
}

<div class="container my-5">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-primary"><i class="bi bi-calendar-event-fill me-2"></i>Your Weekly Timetable</h2>

        <p>Here's your complete timetable for this week. Make sure to be on time!</p>

        <table class="table table-hover table-bordered align-middle mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Day</th>
                    <th>Subject</th>
                    <th>Time</th>
                    <th>Room</th>
                    <th>Teacher</th>
                </tr>
            </thead>
            <tbody>
                <tr><td>Monday</td><td>Mathematics</td><td>09:00 - 10:00 AM</td><td>Room 101</td><td>Mr. Khan</td></tr>
                <tr><td>Tuesday</td><td>Physics</td><td>10:15 - 11:15 AM</td><td>Room 202</td><td>Ms. Fatima</td></tr>
                <tr><td>Wednesday</td><td>English</td><td>11:30 - 12:30 PM</td><td>Room 103</td><td>Mr. Ali</td></tr>
                <tr><td>Thursday</td><td>Chemistry</td><td>01:00 - 02:00 PM</td><td>Room 204</td><td>Ms. Sarah</td></tr>
                <tr><td>Friday</td><td>Computer Science</td><td>02:15 - 03:15 PM</td><td>Room 301</td><td>Mr. Asif</td></tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-end mt-4">
            <a href="/Student/Dashboard" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>
