@{
    ViewData["Title"] = "Generate Fee Challans";
    Layout = "~/Views/Shared/_ClerkLayout.cshtml";
}

<div class="container py-4">
    <h3 class="mb-3">@ViewData["Title"]</h3>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="GenerateFeeChallansPost" method="post">
        <div class="mb-3">
            <label for="feeDetails" class="form-label">Enter details for fee challans</label>
            <input type="text" class="form-control" id="feeDetails" name="feeDetails" placeholder="e.g. class, amount" required />
        </div>

        <button type="submit" class="btn btn-primary">Generate</button>
        <a asp-controller="Clerk" asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>

    </form>
</div>
