@model SMS.Models.Class
@{
    ViewData["Title"] = "Add Class & Subject";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Add Class and Subject</h2>
    <hr />
    <form asp-action="AddClassSubject" method="post" class="shadow p-4 rounded bg-light">
        <div class="form-group mb-3">
            <label asp-for="ClassName" class="form-label">Class Name</label>
            <input asp-for="ClassName" class="form-control" placeholder="Enter class name (e.g., 6th)" />
            <span asp-validation-for="ClassName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SubjectName" class="form-label">Subject Name</label>
            <input asp-for="SubjectName" class="form-control" placeholder="Enter subject name (e.g., Mathematics)" />
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add</button>
        <a asp-action="ViewClassesSubjects" class="btn btn-secondary ms-2">Back</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
