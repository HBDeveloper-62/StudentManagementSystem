@model SMS.Models.EventExam
@{
    ViewData["Title"] = "Create Event / Exam";
}

<div class="container mt-5">
    <h2 class="mb-4 text-success">Create New Event / Exam</h2>

    <form asp-action="CreateEvent" method="post">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Date</label>
            <input asp-for="Date" type="date" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Type</label>
            <select asp-for="Type" class="form-select" required>
                <option value="">-- Select Type --</option>
                <option>Event</option>
                <option>Exam</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Events")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
