@model List<SMS.Models.Class>

@{
    ViewData["Title"] = "Manage Classes & Subjects";
}

<div class="container mt-4">
    <h2 class="mb-4">Manage Classes & Subjects</h2>

    <a href="@Url.Action("AddClassSubject", "Admin")" class="btn btn-success mb-3">Add Class/Subject</a>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Class</th>
                <th>Subject</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ClassName</td>
                    <td>@item.SubjectName</td>
                    <td>
                        <a href="@Url.Action("EditClassSubject", "Admin", new { id = item.Id })" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                    <td>
                        <a href="@Url.Action("DeleteClassSubject", "Admin", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
