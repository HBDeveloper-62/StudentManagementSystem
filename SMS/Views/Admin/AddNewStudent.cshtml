@model SMS.Models.Admission

@{
    ViewData["Title"] = "Add New Student";
}

<!-- Bootstrap Animate.css CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    :root {
        --primary-color: #6c5ce7;
        --secondary-color: #00cec9;
        --dark-color: #2d3436;
        --light-color: #f5f6fa;
        --success-color: #00b894;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .admission-card {
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .admission-card:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
        }

    .card-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
    }

        .card-header h3 {
            position: relative;
            z-index: 2;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .card-header::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 200%;
            background: rgba(255, 255, 255, 0.1);
            transform: rotate(30deg);
        }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(108, 92, 231, 0.25);
        }

    .form-label {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 8px;
    }

    .btn-submit {
        background-color: var(--success-color);
        border: none;
        padding: 12px 24px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s;
    }

        .btn-submit:hover {
            background-color: #00997b;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 184, 148, 0.4);
        }

    .input-icon {
        position: relative;
    }

        .input-icon i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
        }

    .animate-pulse-on-hover:hover {
        animation: pulse 1.5s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    .validation-summary {
        border-radius: 8px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card admission-card animate__animated animate__fadeInUp">
                <div class="card-header text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-user-graduate me-2"></i> Student Admission Form</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddNewStudent" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger validation-summary mb-4"></div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="FullName" class="form-label"><i class="fas fa-user me-2"></i>Full Name</label>
                                <div class="input-icon">
                                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" required />
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="FatherName" class="form-label"><i class="fas fa-user-tie me-2"></i>Father's Name</label>
                                <input asp-for="FatherName" class="form-control" placeholder="Enter father's name" required />
                                <span asp-validation-for="FatherName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Class" class="form-label"><i class="fas fa-graduation-cap me-2"></i>Class</label>
                                <select asp-for="Class" class="form-select" required>
                                    <option value="">Select Class</option>
                                    <option value="1">Class 1</option>
                                    <option value="2">Class 2</option>
                                    <option value="3">Class 3</option>
                                    <option value="4">Class 4</option>
                                    <option value="5">Class 5</option>
                                    <option value="6">Class 6</option>
                                    <option value="7">Class 7</option>
                                    <option value="8">Class 8</option>
                                    <option value="9">Class 9</option>
                                    <option value="10">Class 10</option>
                                </select>
                                <span asp-validation-for="Class" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Email" class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
                                <div class="input-icon">
                                    <input asp-for="Email" class="form-control" type="email" placeholder="student@example.com" required />
                                    <i class="fas fa-at"></i>
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Contact" class="form-label"><i class="fas fa-phone me-2"></i>Contact Number</label>
                                <div class="input-icon">
                                    <input asp-for="Contact" class="form-control" placeholder="+92 3XX XXXXXXX" required />
                                    <i class="fas fa-mobile-alt"></i>
                                </div>
                                <span asp-validation-for="Contact" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="AdmissionDate" class="form-label"><i class="fas fa-calendar-day me-2"></i>Admission Date</label>
                                <input asp-for="AdmissionDate" class="form-control" type="date" required />
                                <span asp-validation-for="AdmissionDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-submit btn-lg animate__animated animate__pulse animate-pulse-on-hover">
                                <i class="fas fa-paper-plane me-2"></i> Submit Admission
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add animation to form elements on focus
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('animate__animated', 'animate__fadeIn');
            });
        });

        // Form submission animation
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = document.querySelector('.btn-submit');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Processing...';
            submitBtn.classList.add('animate__animated', 'animate__pulse');
        });
    </script>
}