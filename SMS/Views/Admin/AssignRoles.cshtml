@model List<SMS.Models.UserModel>
@{
    ViewBag.Title = "Assign Roles";
}

<h2 class="mt-3 mb-4 text-center">User Management - Assign Roles</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Country Code</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.ContactNumber</td>
                <td>@user.CountryCode</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("EditUser", "Admin", new { id = user.Id })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })"
                       onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
