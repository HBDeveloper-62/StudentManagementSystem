@model IEnumerable<IGrouping<string, SMS.Models.Admission>>

@{
    ViewData["Title"] = "All Students by Class";
}

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<!-- Animate.css -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    :root {
        --primary-color: #6c5ce7;
        --secondary-color: #00cec9;
        --dark-color: #2d3436;
        --light-color: #f8f9fa;
        --danger-color: #ff7675;
        --warning-color: #fdcb6e;
        --success-color: #00b894;
    }

    body {
        background-color: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 20px rgba(108, 92, 231, 0.2);
        position: relative;
        overflow: hidden;
    }

        .page-header::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 200%;
            background: rgba(255, 255, 255, 0.1);
            transform: rotate(30deg);
        }

        .page-header h2 {
            position: relative;
            z-index: 2;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

    .class-card {
        border-radius: 12px;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        margin-bottom: 2rem;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .class-card:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

    .class-header {
        background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 1rem 1.5rem;
        position: relative;
    }

        .class-header h5 {
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
        }

            .class-header h5 i {
                margin-right: 10px;
            }

    .student-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .student-table thead th {
            background-color: #f8f9fa;
            color: var(--dark-color);
            font-weight: 600;
            padding: 1rem;
            border-bottom: 2px solid #e9ecef;
        }

        .student-table tbody tr {
            transition: all 0.2s ease;
        }

            .student-table tbody tr:hover {
                background-color: rgba(108, 92, 231, 0.05);
            }

        .student-table td {
            padding: 1rem;
            border-bottom: 1px solid #e9ecef;
            vertical-align: middle;
        }

    .action-btns .btn {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        border-radius: 8px;
        margin-right: 5px;
        transition: all 0.2s;
    }

    .btn-edit {
        background-color: var(--warning-color);
        border-color: var(--warning-color);
        color: #fff;
    }

    .btn-delete {
        background-color: var(--danger-color);
        border-color: var(--danger-color);
        color: #fff;
    }

    .btn-edit:hover {
        background-color: #e8b948;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(253, 203, 110, 0.3);
    }

    .btn-delete:hover {
        background-color: #e66767;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(255, 107, 129, 0.3);
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 3rem;
            color: #dee2e6;
            margin-bottom: 1rem;
        }

    .badge-class {
        background-color: var(--primary-color);
        color: white;
        padding: 0.35em 0.65em;
        border-radius: 50rem;
        font-size: 0.75em;
        font-weight: 700;
        margin-left: 10px;
    }
</style>

<div class="container py-4">
    <div class="page-header animate__animated animate__fadeIn">
        <h2 class="text-center mb-0"><i class="fas fa-users-class me-2"></i>Student Directory</h2>
    </div>

    @if (Model.Any())
    {
        @foreach (var group in Model)
        {
            <div class="class-card animate__animated animate__fadeInUp">
                <div class="class-header">
                    <h5>
                        <i class="fas fa-graduation-cap"></i>
                        Class: @group.Key
                        <span class="badge-class">@group.Count() students</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="student-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Student Name</th>
                                    <th>Father's Name</th>
                                    <th>Contact</th>
                                    <th>Admission Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in group)
                                {
                                    <tr>
                                        <td>@student.StudentID</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle me-3" style="background-color: #@student.FullName.GetHashCode().ToString("X").Substring(0, 6); color: white; width: 36px; height: 36px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                                    @student.FullName.Split(' ').Select(x => x[0]).Aggregate("", (a, b) => a + b)
                                                </div>

                                                <div>
                                                    <div class="fw-semibold">@student.FullName</div>
                                                    <div class="text-muted small">@student.Email</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@student.FatherName</td>
                                        <td>@student.Contact</td>
                                        <td>@student.AdmissionDate.ToString("MMM dd, yyyy")</td>
                                        <td class="action-btns">
                                            <a asp-action="Edit" asp-route-id="@student.StudentID" class="btn btn-edit">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-delete">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state animate__animated animate__fadeIn">
            <i class="fas fa-user-graduate"></i>
            <h4>No Students Found</h4>
            <p class="text-muted">There are currently no students registered in the system.</p>
            <a asp-action="AddNewStudent" class="btn btn-primary mt-3">
                <i class="fas fa-plus-circle me-2"></i>Add New Student
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add animation to table rows
        document.querySelectorAll('.student-table tbody tr').forEach((row, index) => {
            row.style.animationDelay = `${index * 0.05}s`;
            row.classList.add('animate__animated', 'animate__fadeIn');
        });

        // Confirmation for delete action
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (!confirm('Are you sure you want to delete this student?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}