@{
    ViewBag.Title = "Student Details";
    var className = ViewBag.ClassName as string;
    var status = ViewBag.Status as string;
}

<div class="container mt-5">
    <h2 class="text-center">Student Details - @status (@className)</h2>
    <hr />

    <!-- Dummy table for now -->
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Student Name</th>
                <th>Roll No</th>
                <th>Class</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <!-- Dummy Data - Replace with dynamic DB data later -->
            @for (int i = 1; i <= 5; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>Student @i</td>
                    <td>100@i</td>
                    <td>@className</td>
                    <td>@status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
